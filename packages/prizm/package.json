{
  "name": "@prizmjs/prizm",
  "description": "Build retro games with ZX Spectrum style graphics",
  "version": "0.0.0-alpha",
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "type": "module",
  "files": ["dist"],
  "exports": {
    "types": "./dist/main.d.ts",
    "import": "./dist/main.js",
    "require": "./dist/main.cjs"
  },
  "scripts": {
    "test": "vitest",
    "docs": "typedoc --plugin typedoc-plugin-missing-exports",
    "docs:serve": "http-server docs",
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepare": "npm run clean && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "http-server": "^14.1.1",
    "tsup": "^8.4.0",
    "typedoc": "^0.27.9",
    "typedoc-plugin-missing-exports": "^3.1.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/piersroberts/prizm.git"
  }
}
